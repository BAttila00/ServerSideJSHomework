<%- include('header') -%>
<%- include('loginMenu') -%>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Túrázók listája</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Név
                    </th>
                    <th>
                        Életkor
                    </th>
                    <th>
                        Nem
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
                <% turazok.forEach(function(turazo){ %>
                <tr>
                    <td>
                            <%= turazo.nev %>
                    </td>
                    <td>
                            <%= turazo.kor %>
                    </td>
                    <td>
                            <%= turazo.nem %>
                    </td>
                    <td>
                            <%= turazo.email %>
                    </td>
                    <td style="width:30px;white-space: nowrap">
                        <a href="/route/001" class="btn btn-sm btn-success">Túrái</a>
                        <a href="/athletesList/edit/001" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                <% }); %>

            </table>
            <br />
            <a href="/athletesList/new" class="btn btn-block btn-primary">Új túrázó hozzáadása</a>
        </div>
    </div>
</div>
<%- include('footer') -%>