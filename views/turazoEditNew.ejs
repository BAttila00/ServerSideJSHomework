<%- include('header') -%>
<%- include('loginMenu') -%>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Túrázó módosítás / létrehozás</h2>
                <form method="POST">
                    <!-- erre azért van szükség h módosítás felküldésénél tudjuk h melyik túrázót módosítottuk -->
                    <input type="hidden" name="turazoID"
                    value="<%= (typeof turazo === 'undefined') ? '' : turazo._id %>">
                    <div class="form-group">
                        <label for="nev">Név</label>
                        <input type="text" class="form-control" id="nev" name="nev" 
                        value="<%= (typeof turazo === 'undefined') ? '' : turazo.nev %>">
                    </div>
                    <div class="form-group">
                        <label for="eletkor">Életkor</label>
                        <input type="text" class="form-control" id="eletkor" name="eletkor"
                        value="<%= (typeof turazo === 'undefined') ? '' : turazo.eletkor %>">
                    </div>
                    <div class="form-group">
                        <label for="nem">Nem</label>
                        <input type="text" class="form-control" id="nem" name="nem"
                        value="<%= (typeof turazo === 'undefined') ? '' : turazo.nem %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" name="email"
                        value="<%= (typeof turazo === 'undefined') ? '' : turazo.email %>">
                    </div>
                    <input type="submit" class="btn btn-primary" href="/athletesList" value="Mentés"/>
                    <a class="btn btn-link" href="/athletesList">Mégsem</a>
                </form>
            </div>
        </div>
    </div>
<%- include('footer') -%>