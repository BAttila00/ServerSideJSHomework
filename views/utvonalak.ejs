<%- include('header') -%>
<%- include('indexMenu') -%>
            
          <div class="container">
                <div class="row">
                    <div class="col-8">
                        <h2>Túra útvonalak, leírások</h2>
                        <table class="table table-striped table-bordered">
                            <tr>
                                <th>
                                    Cím
                                </th>
                                <th>
                                    Táv (km)
                                </th>                               
                                 <th>
                                    Rövid leírás
                                </th>
                                <th>
                                    Hoszabb leírás
                                </th>
                            </tr>
                            <% turak.forEach(function(tura){ %>
                                <tr>
                                    <td>
                                            <a href="/routes/<%= tura._id %>"><%= tura.cim %></a>
                                    </td>
                                    <td>
                                            <%= tura.tav %>
                                    </td>
                                    <td>
                                            <%= tura.rovidLeiras %>
                                    </td>
                                    <td>
                                            <%= tura.hoszabbLeiras %>
                                    </td>
                                </tr>
                            <% }); %>
                        </table>
                    </div>
                </div>
            </div>

<%- include('footer') -%>